<idea-plugin version="2">
    <name>Protocol Buffers</name>
    <description>Google Protocol Buffers plugin</description>
    <version>0.2</version>
    <vendor>Nikolay Matveev</vendor>
    <idea-version since-build="8000"/>

    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>protobuf.ProtobufLoader</implementation-class>
        </component>
        <component>
            <implementation-class>protobuf.compiler.PbCompilerApplicationSettings</implementation-class>
        </component>        
    </application-components>

    <module-components>
        <!-- Add your module components here -->
    </module-components>

    <project-components>
        <component>
            <implementation-class>protobuf.compiler.PbCompilerLoader</implementation-class>
        </component>
        <component>
            <implementation-class>protobuf.compiler.PbCompilerProjectSettings</implementation-class>
        </component>
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <!--<action id="Protobuf.NewFile" class="protobuf.actions.NewFileAction">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewXml"/>
        </action>-->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="protobuf.file.ProtobufFileTypeLoader"/>
        <syntaxHighlighter key="Protobuf" implementationClass="protobuf.highlighting.ProtobufSyntaxHighlighter"/>

        <lang.braceMatcher language="Protobuf" implementationClass="protobuf.highlighting.ProtobufBraceMatcher"/>
        <lang.parserDefinition language="Protobuf" implementationClass="protobuf.lang.parser.ProtobufParserDefinition"/>
        <lang.formatter language="Protobuf"
                        implementationClass="protobuf.formatter.ProtobufFormattingModelBuilder"/>
        <lang.commenter language="Protobuf" implementationClass="protobuf.commenter.ProtobufCommenter"/>
        <lang.foldingBuilder language="Protobuf" implementationClass="protobuf.folding.ProtobufFoldingBuilder"/>
        <annotator language="Protobuf" implementationClass="protobuf.annotator.PbAnnotator"/>

        <compilerSettingsFactory implementation="protobuf.compiler.PbCompilerSettingsFactory"/>       
    </extensions>
</idea-plugin>